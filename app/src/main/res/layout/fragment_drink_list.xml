<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_margin_large"
    android:paddingRight="@dimen/activity_margin_large"
    android:paddingBottom="@dimen/activity_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select the drink you would like to brew:"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_large"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/drink_list_view"
        android:scrollbarAlwaysDrawVerticalTrack="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/go_home_button"
            style="@style/DarkButtonTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/activity_margin"
            android:layout_weight="2"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin"
            android:text="Back to Home"
            android:onClick="MainActivity"/>

        <Button
            style="@style/DarkButtonTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin"
            android:layout_gravity="right"
            android:layout_weight="2"
            android:text="Custom Drink"
            android:id="@+id/custom_drink_button"/>

    </LinearLayout>



</LinearLayout>