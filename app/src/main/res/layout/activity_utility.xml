            android:layout_weight="1"
            android:layout_margin="8dp"
            android:id="@+id/test_8"
            android:text="Test 8"
            android:onClick="test8"/>

        <Button
            style="@style/DarkButtonTheme"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:id="@+id/test_9"
            android:text="Test 9"
            android:onClick="test9"/>

    </LinearLayout>

</LinearLayout>
